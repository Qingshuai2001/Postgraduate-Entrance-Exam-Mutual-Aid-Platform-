<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qing.dao.ExperienceDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qing.entity.ExperienceEntity" id="experienceMap">
        <result property="title" column="title"/>
        <result property="categoryName" column="categoryName"/>
        <result property="picture" column="picture"/>
        <result property="content" column="content"/>
        <result property="result" column="result"/>
        <result property="clickNum" column="clickNum"/>
        <result property="storeNum" column="storeNum"/>
        <result property="publishTime" column="publishTime"/>
        <result property="createdBy" column="createdBy"/>

    </resultMap>



    <select id="selectListView" resultType="com.qing.entity.view.ExperienceView" >
        SELECT  experience.* FROM experience  experience
        <where> 1=1 ${ew.sqlSegment}</where>
    </select>


</mapper>