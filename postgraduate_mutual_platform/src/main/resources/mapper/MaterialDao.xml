<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qing.dao.MaterialDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qing.entity.MaterialEntity" id="materialMap">
        <result property="title" column="title"/>
        <result property="categoryName" column="categoryName"/>
        <result property="picture" column="picture"/>
        <result property="content" column="content"/>
        <result property="introduction" column="introduction"/>
        <result property="downNum" column="downNum"/>
        <result property="price" column="price"/>
        <result property="result" column="result"/>
        <result property="createdBy" column="createdBy"/>
        <result property="createdTime" column="createdTime"/>
    </resultMap>



    <select id="selectListView"
            resultType="com.qing.entity.view.MaterialView" >

        SELECT  material.* FROM material  material
        <where> 1=1 ${ew.sqlSegment}</where>
    </select>



</mapper>